{
  "name": "tuner-promo-video",
  "version": "1.0.0",
  "description": "Apple-style promotional video for Tuner using Playwright browser capture",
  "scripts": {
    "capture": "npx tsx src/capture.ts",
    "studio": "remotion studio",
    "build": "remotion render TunerPromo out/tuner-promo.mp4",
    "build:all": "./render-all.sh",
    "build:gif": "remotion render TunerPromo out/tuner-promo.gif",
    "all": "npm run capture && npm run build"
  },
  "dependencies": {
    "@remotion/animation-utils": "4.0.409",
    "@remotion/cli": "^4.0.0",
    "@remotion/enable-scss": "4.0.409",
    "@remotion/fonts": "4.0.409",
    "@remotion/google-fonts": "4.0.409",
    "@remotion/layout-utils": "4.0.409",
    "@remotion/mcp": "4.0.409",
    "@remotion/media-parser": "4.0.409",
    "@remotion/motion-blur": "4.0.409",
    "@remotion/shapes": "4.0.409",
    "@remotion/studio": "4.0.409",
    "@remotion/transitions": "4.0.409",
    "autoprefixer": "^10.4.23",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remotion": "^4.0.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@remotion/tailwind-v4": "^4.0.409",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  }
}